{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "rootDir": "./",
  },
  "include": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/test",
    "**/__mocks__/**"
  ]
}
